

<table border='1'>

    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articlees .each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show' , articlee_path(article)  %></td>
            <td><%= link_to 'Edit' , edit_articlee_path(article)  %></td>


            <td><%= link_to 'Delete' , articlee_path(article) , method: :delete , data: {confirm: "Are you sure ?"}%></td>
        </tr>
        <% end %>
        
    </tbody>
   
</table>
<p><%= link_to 'Create new Article' , new_articlee_path%></p>