
        <h2>New Article</h2>
        <% if @articlee.errors.any? %>
        <h2>The following errors prevented the article from being saved</h2>
        <ul>
        <% @articlee.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
        <% end %>
        </ul>
        <% end %>
        <%= form_with scope: :articlee, url:articlees_path, local: true do |f| %>
        <p> 
        <%= f.label :title %> <br/> 
        <%= f.text_field :title %>
        </p>

        <p> 
        <%= f.label :description %> <br/> 
        <%= f.text_area :description %>
        </p>
        <p>
        <%=f.submit %>
        </p>

        <% end %>